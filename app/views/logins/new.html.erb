            <%= f.text_field :email, placeholder: "#{I18n.t 'activerecord.attributes.new.e_placeholder'}" ,autofocus:'true', class: "form-control form-control-lg", id: "form3Example3"%>
          </div>
          <br>
          <!-- Password input -->
          <div class="form-outline mb-3">
<!--            <input type="password" id="form3Example4" class="form-control form-control-lg"-->
<!--                   placeholder="Enter password" />-->
<!--            <label class="form-label" for="form3Example4">Password</label>-->
            <%= f.label t 'activerecord.attributes.new.password' , class: "form-label", for: "form3Example3" %>
            <%= f.text_field :password, placeholder: "#{I18n.t 'activerecord.attributes.new.p_placeholder'}", class: "form-control form-control-lg", id: "form3Example3"%>
          </div>
          <br>
<!--          <div class="d-flex justify-content-between align-items-center">-->

<!--            <div class="form-check mb-0">-->
