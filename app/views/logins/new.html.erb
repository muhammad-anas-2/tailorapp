<!--                   placeholder="Enter password" />-->
<!--            <label class="form-label" for="form3Example4">Password</label>-->
            <%= f.label :password , class: "form-label", for: "form3Example3" %>
            <%= f.text_field :password, placeholder: "Enter password", class: "form-control form-control-lg", id: "form3Example3"%>
