            <%= f.button 'Log In'.html_safe,  class: "btn btn-primary btn-lg", role: "button" %>
            <br>
            <br>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account?

              <%= link_to 'Register',new_user_path, class: "link-danger" %>
            </p>
          </div>

        <% end %>
      </div>
    </div>
  </div>

</section>