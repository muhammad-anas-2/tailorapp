<!--                Remember me-->
<!--              </label>-->
<!--            </div>-->
<!--            <a href="#!" class="text-body">Forgot password?</a>-->
<!--          </div>-->

          <div class=" form-outline mb-3">
<!--            <button type="button" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>-->
            <%= f.button 'Log In'.html_safe,  class: "btn btn-primary btn-lg", role: "button" %>
            <br>
            <br>
            <p class="small fw-bold mt-2 pt-1 mb-0"><%= t ".services_html" %>

              <%= link_to 'Register',new_user_path, class: "link-danger" %>
            </p>
          </div>

        <% end %>
      </div>
    </div>
  </div>

</section>