<div style="width: 95%; margin: 0 auto;">
  <p id="notice"><%= notice %></p>

      <h3 align= "right">
        <div class="clients-actions">

          <%= link_to " ", edit_client_path(@client), class: "fas fa-edit text-decoration-none", title: "Edit client" %>  &nbsp;
          <%= link_to " ", clients_path, class: "fa-solid fa-eye text-decoration-none" , title: "Show all clients"%> &nbsp;
          <%= link_to " ", clients_path(@client), method: :delete, data: { confirm: "Are you sure you want to delete the clients?"}, class: "fa-solid fa-trash-can text-decoration-none" , title: "Delete client"%>  &nbsp;
        </div>
      </h3>

      <div class=" col-xs-4 col-xs-offset-0">
      <strong>  <h2 align="left">Client: <%= @client.name %></h2></strong>
      </div>
      <div class=" col-xs-4 col-xs-offset-0">
       <strong> <h2 align="left">Serial No: <%= @client.serial_no %></h2></strong>
      </div>
      <div class=" col-xs-4 col-xs-offset-0">
        <strong><h2 align="left">Phone: <%= @client.phone %></h2></strong>
      </div>
      <div class=" col-xs-12 col-xs-offset-0">
        <h3 align="left">Chart Type: <%= @client.type_name %></h3>
      </div>

      <div class="well col-xs-4 col-xs-offset-0">

        <h4 class=" description">Arm Length: <%= @client.arm %></h4>
        <hr>

        <h4 class=" description">Shoulder Length: <%= @client.shoulder %></h4>
        <hr>

        <h4 class=" description">Neck Line Length:   <%= @client.neck_line %></h4>
        <hr>

        <h4 class=" description">Chest Length:   <%= @client.chest %></h4>
        <hr>

        <h4 class=" description">Arm Hole Length: <%= @client.arm_hole %></h4>

      </div>

      <div class="well col-xs-4 col-xs-offset-0">

        <h4 class=" description">Waist Length:   <%= @client.waist %> </h4>
        <hr>

        <h4 class=" description">Skirt Length:   <%= @client.skirt %></h4>
        <hr>

        <h4 class=" description">Shalwaar Length:   <%= @client.shalwar %></h4>
        <hr>

        <h4 class=" description">Paincha Length:   <%= @client.paincha %></h4>
        <hr>

        <h4 class=" description">Front:   <%= @client.front %></h4>


      </div>

      <div class="well col-xs-4 col-xs-offset-0">

        <h4 class=" description">Side Length:  <%= @client.side %></h4>
        <hr>

        <h4 class=" description">Hip Length:  <%= @client.hip %></h4>
        <hr>

        <h4 class=" description"> Collar or Bayn:  <%= @client.collar_ban %></h4>
        <hr>

        <h4 class=" description"> Cuff:    <%= @client.cuff %></h4>
        <hr>

        <h4 class=" description"> plate: <%= @client.plate %></h4>

      </div>

      <br>
      <br>
      <div class="text-area col-xs-4 col-xs-offset-0">
        <h4 class=" description">Description:</h4>
        <%= simple_format(@client.description) %>
        <hr>
      </div>
  <br>
</div>

